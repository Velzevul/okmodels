<div class='info<%= " big" if can? :manage, Model %>' >
  <div class='info-inner'>
    <%= render "shared/model" %>
  </div>
</div>

<div id='magazine' class="centerStart">
  <% @model.photos.each do |photo| %>
    <% if can? :read, photo %>
      <% element = cycle("next","previous") %>
      <div class='page <%= element %>' onclick="$('#magazine').turn('<%= element %>')">
        <%= image_tag(photo.image.url) %>
        <% if can? :manage, photo %>
          <%= link_to "delete", [@model, photo], :method => :delete, :class => "delete-photo", :data => {:confirm => "Delete the photo?"}%>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>