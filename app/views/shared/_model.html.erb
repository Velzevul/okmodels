<strong><%= @model.full_name %></strong><br>
Age: <%= Date.today.year - @model.date_of_birth.year %><br>
Height: <%= @model.height %><br>
Shoes: <%= @model.shoes %><br>
Hair: <%= @model.hair %><br>
Eyes: <%= @model.eyes %><br>
<% if @model.is_a? Woman %>
  Breast: <%= @model.bust %><br>
  Waist: <%= @model.waist %><br>
  Heaps: <%= @model.heaps %><br>
<% end %>

<% if can? :manage, Model %>
  <% if @model.confirmed %>
    <%= link_to "view", @model %><br>
    <%= link_to "add a photo", send("new_#{@model.type.downcase}_photo_path", @model) %><br>
    <%= link_to "edit", send("edit_#{@model.type.downcase}_path", @model) %><br>
  <% else %>
    <%= link_to "approve", send("approve_#{@model.type.downcase}_path", @model) %><br>
  <% end %>
  <%= link_to "destroy", @model, :method => :delete, :data => {:confirm => "Delete this man record?"} %>
<% end %>