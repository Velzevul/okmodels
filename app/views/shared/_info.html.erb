<div class='info'>
  Full name: <%= model.full_name %><br>
  Age: <%= Date.today.year - model.date_of_birth.year %><br>
  Height: <%= model.height %><br>
  Shoes: <%= model.shoes %><br>
  Hair: <%= model.hair %><br>
  Eyes: <%= model.eyes %><br>
  <% if model.is_a? Woman %>
    Breast: <%= model.bust %><br>
    Waist: <%= model.waist %><br>
    Heaps: <%= model.heaps %>
  <% end %>
</div>